<div style="text-align: center;">
    <h2>
        Top Products of Today
    </h2>
</div>

@if (ProductService is not { Products.Count: > 0 })
{
    <span>
        @ProductService.Message
    </span>
}
else
{
    <div class="container">
        @foreach (var product in ProductService.Products)
        {
            @if (product.Featured)
            {
                <div class="featured-product">
                    <div>
                        <a href="product/@product.Id">
                            @if (product.ImageUrl is { Length: > 0 })
                            {
                                <img src="@product.ImageUrl" alt="@product.Title" />
                            }
                            else if (product is { Images.Count: > 0 })
                            {
                                <img src="@product.Images[0].Data" alt="@product.Title" />
                            }
                        </a>
                    </div>
                    <h4>
                        <a href="product/@product.Id">
                            @product.Title
                        </a>
                    </h4>
                    @if (product.Variants is { Count: > 0 })
                    {
                        <h5 class="price">
                            @product.Variants[0].Price.ToString("C")
                        </h5>
                    }
                </div>
            }
        }
    </div>
}
